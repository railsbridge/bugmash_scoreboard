<h3><%= link_to_if(logged_in?, @participant.name, edit_participant_path(@participant)) %> <%= @participant.score %> points</h3>
<table>
  <tr>
    <th>Lighthouse Ticket</th>
    <th>Point Value</th>
  </tr>

  <% @participant.contributions.each do |contribution| %>
    <tr>
      <td><%= link_to contribution.lighthouse_id, "https://rails.lighthouseapp.com/projects/8994/tickets/#{contribution.lighthouse_id}", :target => '_blank' %></td>
      <td><%= contribution.point_value %></td>
    </tr>
  <% end %>
</table>
